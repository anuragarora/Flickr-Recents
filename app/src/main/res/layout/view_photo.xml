<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:src="@drawable/ic_launcher_background"
        android:layout_weight="0.72"
        android:paddingLeft="@dimen/activity_margin_quarter"
        android:paddingRight="@dimen/activity_margin_quarter" />

    <TextView
        android:id="@+id/view_photo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Lorem Ipsum"
        android:textSize="@dimen/text_size_heading_2"
        android:paddingEnd="@dimen/activity_margin_half"
        android:gravity="left"
        android:paddingStart="@dimen/activity_margin_half"
        android:layout_gravity="left" />

</LinearLayout>